@model Hair
<div class="col-sm-4 col-lg-4 col-md-4">
            <div class="img-thumbnail">
                <img src="@Model.ImageThumbnailUrl" alt="no image">
                <div class="caption">
                    <h3 class="float-right">@Model.Price.ToString("c")</h3>
                    <h3> 
                        <a asp-controller="HairPieces" asp-action="Details" asp-route-id="@Model.HairId">@Model.Name</a>
                    </h3>
                    <p>@Model.ShortDescription</p>
                </div>

                <div class="addToCart">
                    <p class="button">
                        <a class="btn btn-primary"
                            asp-controller="ShoppingCart"
                            asp-action = "AddToShoppingCart"
                            asp-route-hairId="@Model.HairId"> Add to cart</a>
                    </p>
                </div>

            </div>
</div>